<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.todo.gumessage.MainActivity">

    <Button
        android:id="@+id/simple_test"
        android:onClick="simpleTest"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="简单测试"/>

    <Button
        app:layout_constraintTop_toBottomOf="@id/simple_test"
        android:id="@+id/multi_thread_test"
        android:onClick="multiThreadTest"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="多线程测试"/>

</android.support.constraint.ConstraintLayout>
